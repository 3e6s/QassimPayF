        margin: 16px auto;
        background-color: #e9e9ed;
        padding: 29px;
        border-radius: 35px;
        box-shadow: 0 0 86px rgba(0, 0, 0, 0.4);
        max-width: 918px;
    }

        .form-box h3 {
            font-size: 2em;
            color: #036;
            text-align: center;
            margin-bottom: 20px;
        }

    .input-box {
        margin-bottom: 20px;
        position: relative;
    }

        .input-box label {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            font-size: 1em;
            color: #036;
            font-weight: 500;
            pointer-events: none;
            transition: 0.5s;
        }

        .input-box input:focus ~ label,
        .input-box input:valid ~ label {
            top: -5px;
            font-size: 0.85em;
            color: #036;
        }

        .input-box input {
            width: 100%;
            background: transparent;
            border: none;
            outline: none;
            font-size: 1em;
            color: #036;
            font-weight: 600;
            padding: 14px;
            border-bottom: 2px solid #036;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        color: #036;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    .btn {
        width: 100%;
        height: 45px;
        background: #036;
        border: none;
        outline: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1em;
        color: #fff;
        font-weight: 572;
        margin-top: 30px;
    }

        .btn:hover {
            background: #002366;
            color: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }

    .table-title {
        font-size: 1.8em;
        color: #036;
        text-align: center;
        margin-bottom: 20px;
        padding-top: 10px;
    }
</style>
