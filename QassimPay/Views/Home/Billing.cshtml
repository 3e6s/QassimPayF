@model QassimPay.Models.TransferModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Billing";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto&display=swap">
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
        }

        .form-box {
            margin: 62px auto;
            background-color: #e9e9ed;
            padding: 54px;
            border-radius: 35px;
            box-shadow: 0 0 86px rgba(0, 0, 0, 0.4);
            max-width: 874px;
        }

            .form-box h1 {
                font-size: 2em;
                color: #036; /* Heading text color */
                text-align: center;
                margin-bottom: 20px;
            }

        .input-box {
            position: relative;
            width: 100%;
            margin-bottom: 20px;
        }

            .input-box label {
                position: absolute;
                top: 50%;
                left: 10px;
                transform: translateY(-50%);
                font-size: 1em;
                color: #036; /* Label text color */
                font-weight: 500;
                pointer-events: none;
                transition: 0.5s;
            }

            .input-box input:focus ~ label,
            .input-box input:valid ~ label {
                top: -5px;
                font-size: 0.85em;
                color: #001366; /* Focused label color */
            }

            .input-box input {
                width: 100%;
                background: transparent; /* Transparent background */
                border: none;
                outline: none;
                font-size: 1em;
                color: #036; /* Input text color */
                font-weight: 600;
                padding: 14px;
                border-bottom: 2px solid #036; /* Border color */
            }

                .input-box input:focus {
                    background-color: transparent; /* Keep background transparent on focus */
                }

        .btn {
            width: 100%;
            height: 52px;
            background: #036;
            border: none;
            outline: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1em;
            color: #fff; /* Button text color */
            font-weight: 572;
            margin-top: 30px;
        }

            .btn:hover {
                background: #002366; /* Button hover background color */
                color: #fff;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            }

        .alert {
            text-align: center;
            font-size: 0.9em;
            margin-bottom: 20px;
            padding: 10px;
            border-radius: 6px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
</head>

<body>
    <!-- Billing Form -->
    <div class="form-box">
        <h1>Pay Your Bill</h1>

        <!-- Alerts -->
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <!-- Form -->
        <form asp-action="Billing" method="post">
            <div class="input-box">
                <input type="text" id="billingNumber" name="billingNumber" required>
                <label for="billingNumber">Billing Number</label>
            </div>

            <div class="input-box">
                <input type="number" id="amount" name="amount" step="0.01" required>
                <label for="amount">Amount</label>
            </div>

            <button type="submit" class="btn">Pay</button>
        </form>
    </div>
</body>

</html>
