@{
    Layout = null;
    var wallet = ViewBag.Wallet;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QassimPay</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/Home/Login">QassimPay</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a class="nav-link" href="/Home/Wallet">Wallet</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Transfer">Transfer</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Billing">Billing</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Transfer_History">Transfer History</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Billing_History">Billing History</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Currency-exchange">Currency Exchange</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Address">Address</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <h2>Welcome back, @ViewBag.Username!</h2>

        @if (wallet == null)
        {
            <button id="createWalletButton" class="btn btn-primary mt-3">Create a Wallet</button>
            <div id="walletPopup" class="mt-3" style="display:none;">
                <h3>Enter Balance</h3>
                <form asp-action="CreateWallet" method="post">
                    <div class="form-group">
                        <input type="number" name="balance" step="0.01" class="form-control" placeholder="Enter initial balance" required />
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        }
        else
        {
            <div class="card mt-3">
                <div class="card-body">
                    <p class="card-text">Wallet ID: @wallet.Wallet_ID</p>
                    <p class="card-text">Balance: @wallet.Balance</p>
                </div>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('createWalletButton').addEventListener('click', function () {
            document.getElementById('walletPopup').style.display = 'block';
        });
    </script>
</body>
</html>