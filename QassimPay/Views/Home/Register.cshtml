@model UserModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto&display=swap">
    <style>
        body {
        /* Match background color with navbar */
            margin: 0;
            font-family: 'Roboto', sans-serif;
        }

        .form-box {
            margin: 61px auto;
            background-color: #003366;
            padding: 47px;
            border-radius: 24px;
            box-shadow: 0 0 86px rgba(0, 0, 0, 0.6);
            max-width: 646px;
        }

            .form-box h2 {
                font-size: 2em;
                color: #F0F8FF; /* Light text for heading */
                text-align: center;
                margin-bottom: 20px;
            }

        .input-box {
            position: relative;
            width: 100%;
            margin-bottom: 20px;
        }

            .input-box label {
                position: absolute;
                top: 50%;
                left: 10px;
                transform: translateY(-50%);
                font-size: 1em;
                color: #F0F8FF; /* Light text for labels */
                font-weight: 500;
                pointer-events: none;
                transition: 0.5s;
            }

            .input-box input:focus ~ label,
            .input-box input:valid ~ label {
                top: -5px;
                font-size: 0.85em;
                color: #e6ddd3; /* Highlight color for focused label */
            }

            .input-box input {
                width: 100%;
                background: transparent; /* Transparent background */
                border: none;
                outline: none;
                font-size: 1em;
                color: #F0F8FF; /* Light text */
                font-weight: 600;
                padding: 14px;
                border-bottom: 2px solid #e6ddd3; /* Blue border */
            }

        .btn {
            width: 100%;
            height: 45px;
            background: #b06653; /* Button background color */
            border: none;
            outline: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1em;
            color: #F0F8FF; /* Light text */
            font-weight: 500;
            margin-top: 20px;
        }

            .btn:hover {
                background: #b05553; /* Darker button background on hover */
                color: #fff; /* Change text color on hover */
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* Add shadow on hover */
            }

        .link {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: #e6ddd3 /* Light blue text for links */
            text-decoration: none;
        }

            .link:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <!-- Registration Form -->
    <div class="form-box">
        <h2>Register</h2>
        <form asp-action="Register" method="post">
            <div class="input-box">
                <input asp-for="First_name" type="text" required>
                <label>First Name</label>
                <span asp-validation-for="First_name" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Last_name" type="text" required>
                <label>Last Name</label>
                <span asp-validation-for="Last_name" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="ID" type="number" required>
                <label>ID</label>
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Monthly_income" type="number" required>
                <label>Monthly Income</label>
                <span asp-validation-for="Monthly_income" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Email" type="email" required>
                <label>Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" required>
                <label>Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Username" type="text" required>
                <label>Username</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">Register</button>
            <a asp-action="Login" class="link">I already have an account</a>
        </form>
    </div>

</body>

</html>
