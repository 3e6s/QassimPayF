@model QassimPay.Models.TransferModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensures the shared layout is used
    ViewData["Title"] = "Transfer Funds";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto&display=swap">
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
        }

        .form-box {
            margin: 62px auto;
            background-color: #e9e9ed;
            padding: 54px;
            border-radius: 35px;
            box-shadow: 0 0 86px rgba(0, 0, 0, 0.4);
            max-width: 874px;
        }

        .form-box h2 {
            font-size: 2em;
                color: #036F; /* Light text for heading */
            text-align: center;
            margin-bottom: 20px;
        }

        .input-box {
            position: relative;
            width: 100%;
            margin-bottom: 20px;
        }

        .input-box label {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            font-size: 1em;
                color: #036; /* Light text for labels */
            font-weight: 500;
            pointer-events: none;
            transition: 0.5s;
        }

 

        .input-box input {
            width: 100%;
            background: transparent; /* Transparent background */
            border: none;
            outline: none;
            font-size: 1em;
                color: #036; /* Light text */
            font-weight: 600;
            padding: 14px;
                border-bottom: 2px solid #036;
            }

        .input-box input:focus {
            background-color: transparent; /* Ensure background remains transparent */
        }

        .btn {
            width: 100%;
            height: 52px;
            background: #036;
            border: none;
            outline: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1em;
            color: #fff;
            font-weight: 572;
            margin-top: 30px;
        }

        .btn:hover {
                background: #002366; /* Darker button background on hover */
            color: #fff; /* Change text color on hover */
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* Add shadow on hover */
        }

        .link {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: #036; /* Light blue text for links */
            text-decoration: none;
        }

        .input-box input:focus ~ label,
        .input-box input:valid ~ label {
            top: -5px;
            font-size: 0.85em;
            color: #001366; /* Highlight color for focused label */
        }
        .link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Transfer Funds Form -->
    <div class="form-box">
        <h2>Transfer Funds</h2>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center" role="alert">@ViewBag.ErrorMessage</div>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success text-center" role="alert">@ViewBag.SuccessMessage</div>
        }

        <form method="post">
            <div class="input-box">
                <input type="number" id="recipientWalletId" name="recipientWalletId" required>
                <label for="recipientWalletId">To Whom (Wallet ID)</label>
            </div>
            <div class="input-box">
                <input type="number" id="amount" name="amount" step="0.01" required>
                <label for="amount">Amount</label>
            </div>
            <button type="submit" class="btn">Transfer</button>
        </form>
        <a asp-action="Wallet" class="link">Go back to Wallet</a>
    </div>
</body>

</html>